extends layout

block content
  style.
    .champ_description
      font-style: italic
      font-size: 1.3rem

  h1= title

  h2.champ_name #{champion_detail.name}
  h3.champ_description #{champion_detail.description}

  p Roles:
    ul
      each role in champion_detail.role
        li= role.role

  p Lanes:
    ul
      each lane in champion_detail.lane
        li= lane.lane

  hr

  p
    a(href=champion_detail._id+'/delete') Delete Champion
  p
    a(href=champion_detail._id+'/update') Update Champion
